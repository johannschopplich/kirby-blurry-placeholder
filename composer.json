{
  "name": "johannschopplich/kirby-blurry-placeholder",
  "description": "Blurry image placeholders and lazy loading for Kirby",
  "type": "kirby-plugin",
  "keywords": [
    "kirby",
    "placeholder",
    "lazyload",
    "lazy",
    "image",
    "seo"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Johann Schopplich",
      "email": "pkg@johannschopplich.com",
      "homepage": "https://johannschopplich.com"
    }
  ],
  "require": {
    "php": ">=7.3.0",
    "getkirby/composer-installer": "^1.1"
  },
  "require-dev": {
    "getkirby/cms": "^3.0",
    "phpstan/phpstan": "^0.12",
    "phpunit/phpunit": "^9.0"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "KirbyExtended\\": "classes/KirbyExtended/"
    }
  },
  "scripts": {
    "analyze": "phpstan analyse",
    "fix": "php-cs-fixer fix --config .php_cs",
    "test": "phpunit",
    "dist": "composer install --no-dev --optimize-autoloader"
  },
  "extra": {
    "kirby-cms-path": false
  }
}
